{
    "name": "cms_article_comment2",
    "title": "文章评论",
    "table": "cms_article_comment",
    "key": "comment_id",
    "orderby_default": "`comment_id` desc",
    "field_obj": "`comment_id`,`available`,`score`,`article_id`,`user_id`,`name`,`tag`,`content`,`reply`",
    "field_default": "`comment_id`,`available`,`score`,`display`,`article_id`,`user_id`,`name`,`tag`",
    "query": {
        "score_min": "`score` >= {0}",
        "score_max": "`score` <= {0}",
        "display_min": "`display` >= {0}",
        "display_max": "`display` <= {0}",
        "name": "`name` like '%{0}%'",
        "tag": "`tag` like '%{0}%'",
        "content": "`content` like '%{0}%'",
        "reply": "`reply` like '%{0}%'",
        "keyword": "(`name` like '%{0}%' || `tag` like '%{0}%')"
    },
    "update": {
        "score_add": "`score` = `score` + {0}",
        "display_add": "`display` = `display` + {0}"
    },
    "format": [
        {
            "key": "available",
            "title": "是否启用",
