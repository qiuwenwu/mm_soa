{
    "name": "cms_article2",
    "title": "文章",
    "table": "cms_article",
    "key": "article_id",
    "orderby_default": "`article_id` desc",
    "field_obj": "`article_id`,`author`,`available`,`channel_id`,`city_id`,`collect_id`,`collecter`,`content`,`description`,`hot`,`img`,`keywords`,`lang`,`praise`,`source`,`state`,`tag`,`title`,`type_id`,`url`,`user_id`",
    "field_default": "`article_id`,`author`,`available`,`channel_id`,`city_id`,`collect_id`,`description`,`display`,`hot`,`keywords`,`lang`,`praise`,`source`,`state`,`tag`,`time_create`,`time_update`,`title`,`type_id`,`url`,`user_id`",
    "query": {
        "author": "`author` like '%{0}%'",
        "collecter": "`collecter` like '%{0}%'",
        "content": "`content` like '%{0}%'",
        "description": "`description` like '%{0}%'",
        "display_min": "`display` >= {0}",
        "display_max": "`display` <= {0}",
        "hot_min": "`hot` >= {0}",
        "hot_max": "`hot` <= {0}",
        "img": "`img` like '%{0}%'",
        "keywords": "`keywords` like '%{0}%'",
        "lang": "`lang` like '%{0}%'",
        "praise_min": "`praise` >= {0}",
        "praise_max": "`praise` <= {0}",
        "source": "`source` like '%{0}%'",
        "state_min": "`state` >= {0}",
        "state_max": "`state` <= {0}",
        "tag": "`tag` like '%{0}%'",
        "time_create_min": "`time_create` >= '{0}'",
        "time_create_max": "`time_create` <= '{0}'",
        "time_update_min": "`time_update` >= '{0}'",
        "time_update_max": "`time_update` <= '{0}'",
        "title": "`title` like '%{0}%'",
        "url": "`url` like '%{0}%'",
        "keyword": "(`description` like '%{0}%' || `keywords` like '%{0}%' || `tag` like '%{0}%' || `title` like '%{0}%')"
    },
    "update": {
        "display_add": "`display` = `display` + {0}",
        "hot_add": "`hot` = `hot` + {0}",
        "praise_add": "`praise` = `praise` + {0}",
        "state_add": "`state` = `state` + {0}"
    },
    "format": [
        {
            "key": "available",
            "title": "是否启用",
            "list": [
                "否",
                "是"
            ]
        },
        {
            "key": "channel_id",
            "title": "频道",
            "table": "cms_article_channel",
            "name": "name"
        },
        {
            "key": "city_id",
            "title": "所属城市",
            "table": "sys_address_city",
            "name": "name"
        },
        {
            "key": "lang",
            "title": "语言",
            "list": [
                {
                    "name": "zh_cn",
                    "value": "zh_cn"
                },
                {
                    "name": "en",
                    "value": "en"
                },
                {
                    "name": "zh_tw",
                    "value": "zh_tw"
                },
                {
                    "name": "ko",
                    "value": "ko"
                },
                {
                    "name": "ja",
                    "value": "ja"
                }
            ]
        },
        {
            "key": "state",
            "title": "状态",
            "list": [
                "",
                "正常",
                "推荐",
                "认证",
                "违规",
                "官方"
            ]
        },
        {
            "key": "type_id",
            "title": "文章分类",
            "table": "cms_article_type",
            "name": "name"
        },
        {
            "key": "user_id",
