{
    "name": "bbs_thread_comment",
    "title": "主题评论",
    "table": "bbs_thread_comment",
    "key": "comment_id",
    "orderby_default": "`display` asc",
    "field_obj": "`comment_id`,`available`,`score`,`thread_id`,`user_id`,`tag`,`reply`,`content`",
    "field_default": "`comment_id`,`available`,`score`,`display`,`thread_id`,`user_id`,`tag`",
    "method": "get get_obj",
    "query": {
        "score_min": "`score` >= {0}",
        "score_max": "`score` <= {0}",
        "display_min": "`display` >= {0}",
        "display_max": "`display` <= {0}",
        "tag": "`tag` like '%{0}%'",
        "reply": "`reply` like '%{0}%'",
        "content": "`content` like '%{0}%'",
        "keyword": "(`tag` like '%{0}%')"
    },
    "query_default": {},
    "update": {
        "score_add": "`score` = `score` + {0}",
        "display_add": "`display` = `display` + {0}"
    },
    "format": [
        {
            "key": "available",
            "title": "是否启用",
            "list": [
                "否",
                "是"
            ]
        },
        {
            "key": "thread_id",
            "title": "所属主题",
            "table": "bbs_thread",
            "name": "title"
        },
        {
            "key": "user_id",
            "title": "用户",
            "table": "user_account",
            "name": "nickname"
        }
    ]
}