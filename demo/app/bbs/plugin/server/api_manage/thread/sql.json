{
    "name": "bbs_thread2",
    "title": "社区主题",
    "table": "bbs_thread",
    "key": "thread_id",
    "orderby_default": "`thread_id` desc",
    "field_obj": "`thread_id`,`available`,`state`,`type_id`,`channel_id`,`city_id`,`user_id`,`hot`,`praise`,`collect_id`,`title`,`keywords`,`description`,`url`,`tag`,`img`,`content`,`collecter`",
    "field_default": "`thread_id`,`available`,`state`,`type_id`,`channel_id`,`display`,`city_id`,`user_id`,`hot`,`praise`,`collect_id`,`time_create`,`time_update`,`title`,`keywords`,`description`,`url`,`tag`",
    "query": {
        "state_min": "`state` >= {0}",
        "state_max": "`state` <= {0}",
        "display_min": "`display` >= {0}",
        "display_max": "`display` <= {0}",
        "hot_min": "`hot` >= {0}",
        "hot_max": "`hot` <= {0}",
        "praise_min": "`praise` >= {0}",
        "praise_max": "`praise` <= {0}",
        "time_create_min": "`time_create` >= '{0}'",
        "time_create_max": "`time_create` <= '{0}'",
        "time_update_min": "`time_update` >= '{0}'",
        "time_update_max": "`time_update` <= '{0}'",
        "title": "`title` like '%{0}%'",
        "keywords": "`keywords` like '%{0}%'",
        "description": "`description` like '%{0}%'",
        "url": "`url` like '%{0}%'",
        "tag": "`tag` like '%{0}%'",
        "img": "`img` like '%{0}%'",
        "content": "`content` like '%{0}%'",
        "collecter": "`collecter` like '%{0}%'",
        "keyword": "(`title` like '%{0}%' || `keywords` like '%{0}%' || `description` like '%{0}%' || `tag` like '%{0}%')"
    },
    "update": {
        "state_add": "`state` = `state` + {0}",
        "display_add": "`display` = `display` + {0}",
        "hot_add": "`hot` = `hot` + {0}",
        "praise_add": "`praise` = `praise` + {0}"
    },
    "format": [
        {
            "key": "available",
            "title": "是否启用",
            "list": [
                "否",
                "是"
            ]
        },
        {
            "key": "state",
            "title": "状态",
            "list": [
                "",
                "正常",
                "推荐",
                "认证",
                "违规",
                "官方"
            ]
        },
        {
            "key": "type_id",
            "title": "主题分类",
            "table": "bbs_thread_type",
            "name": "name"
        },
        {
            "key": "channel_id",
            "title": "频道",
            "table": "bbs_thread_channel",
            "name": "name"
        },
        {
            "key": "city_id",
            "title": "所属城市",
            "table": "sys_address_city",
            "name": "name"
        },
        {
            "key": "user_id",
            "title": "用户",
            "table": "user_account",
            "name": "nickname"
        }
    ],
    "field_hide": []
}