{
    "name": "mall_shop2",
    "title": "店铺信息",
    "table": "mall_shop",
    "key": "shop_id",
    "orderby_default": "`shop_id` desc",
    "field_obj": "`shop_id`,`available`,`state`,`type_id`,`channel_id`,`city_id`,`user_id`,`hot`,`praise`,`name`,`description`,`keywords`,`img`,`tag`,`collecter`",
    "field_default": "`shop_id`,`available`,`state`,`type_id`,`display`,`channel_id`,`city_id`,`user_id`,`hot`,`praise`,`time_create`,`time_update`,`name`,`description`,`keywords`,`img`,`tag`",
    "query": {
        "state_min": "`state` >= {0}",
        "state_max": "`state` <= {0}",
        "display_min": "`display` >= {0}",
        "display_max": "`display` <= {0}",
        "hot_min": "`hot` >= {0}",
        "hot_max": "`hot` <= {0}",
        "praise_min": "`praise` >= {0}",
        "praise_max": "`praise` <= {0}",
        "time_create_min": "`time_create` >= '{0}'",
        "time_create_max": "`time_create` <= '{0}'",
        "time_update_min": "`time_update` >= '{0}'",
        "time_update_max": "`time_update` <= '{0}'",
        "name": "`name` like '%{0}%'",
        "description": "`description` like '%{0}%'",
        "keywords": "`keywords` like '%{0}%'",
        "img": "`img` like '%{0}%'",
        "tag": "`tag` like '%{0}%'",
        "collecter": "`collecter` like '%{0}%'",
        "keyword": "(`name` like '%{0}%' || `description` like '%{0}%' || `keywords` like '%{0}%' || `tag` like '%{0}%')"
    },
    "update": {
        "state_add": "`state` = `state` + {0}",
        "display_add": "`display` = `display` + {0}",
        "hot_add": "`hot` = `hot` + {0}",
        "praise_add": "`praise` = `praise` + {0}"
    },
    "format": [
        {
            "key": "available",
            "title": "是否启用",
            "list": [
                "否",
                "是"
            ]
        },
        {
            "key": "state",
            "title": "状态",
            "list": [
                "",
                "营业中",
                "已歇业",
                "已关店",
                "已删除",
                "已违规"
            ]
        },
        {
            "key": "type_id",
            "title": "店铺分类",
            "table": "mall_shop_type",
            "name": "name"
        },
        {
            "key": "channel_id",
            "title": "频道",
            "table": "mall_shop_channel",
            "name": "name"
        },
        {
            "key": "city_id",
            "title": "所属城市",
            "table": "sys_address_city",
            "name": "name"
        },
        {
            "key": "user_id",
            "title": "店铺所属人",
            "table": "user_account",
            "name": "nickname"
        }
    ],
    "field_hide": []
}